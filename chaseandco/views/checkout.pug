extends layout

block content
    form(action="/submit-order", method="POST")
      .form-row
        .col-md-4.mb-3
          label(for='validationDefault01') First name
          input#validationDefault01.form-control(type='text', placeholder='First name', name='firstName', required='')
        .col-md-4.mb-3
          label(for='validationDefault02') Last name
          input#validationDefault02.form-control(type='text', placeholder='Last name', name='lastName', required='')
        .col-md-4.mb-3
            label(for='validationEmail') Email
            input#validationEmail.form-control(type='text', placeholder='Email', name='email', required='')
      .form-row
        .col-md-3.mb-3
          label(for='validationDefault06') Street Address
          input#validationDefault06.form-control(type='text', placeholder='Street',name='street', required='')
        .col-md-6.mb-3
          label(for='validationDefault03') City
          input#validationDefault03.form-control(type='text', placeholder='City', name='city', required='')
        .col-md-3.mb-3
          label(for='validationDefault04') State
          input#validationDefault04.form-control(type='text', placeholder='State', name='state', required='')
        .col-md-3.mb-3
          label(for='validationDefault05') Zip
          input#validationDefault05.form-control(type='text', placeholder='Zip',name='postal_code', required='')

          input#custId(type='hidden', name='items', value='3487;2689;')
      button.btn.btn-primary(type='submit') Submit form

    