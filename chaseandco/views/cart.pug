extends layout

block content
    .table-responsive
        table.table
            thead
                tr
                    th(scope='col') Product
                    th(scope='col') Price
                    th(scope='col') Quantity
                    th(scope='col') Remove
            tbody
                each val in items
                    tr
                        th(scope='row')
                            img.img-fluid.rounded.shadow-sm(src=val.product.images[0], alt='', width='70')
                            .ml-3.d-inline-block.align-middle
                            h5.mb-0
                                a.text-dark.d-inline-block.align-middle(href='#') #{val.product.name}
                        td
                            strong #{val.price}
                        td
                            strong #{val.qty}
                        td
                            a.text-dark(href='#')
                                i.fa.fa-trash